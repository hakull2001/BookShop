    <h2 style="text-align:center; margin-top: 25px;">ĐĂNG SÁCH MỚI</h2>
    <form method="POST" action="/books/store" style="margin-left: 50px; width: 90%;">
        <div class="mb-3">
            <label for="name" class="form-label"><b>Tên sách</b></label>
            <input type="text" class="form-control" id="name" name="name">
          </div>
        <div class="mb-3">
          <label for="descriptions" class="form-label"><b>Mô tả</b></label>
          <textarea type="text" class="form-control" id="" name="descriptions"></textarea>
        </div>
          <div class="mb-3">
            <label for="thumb" class="form-label"><b>Link sách</b></label>
            <input type="text" class="form-control" id="thumb" name="thumb">
          </div>
          <div class="mb-3">
            <label for="author" class="form-label"><b>Tác giả</b></label>
            <input type="text" class="form-control" id="author" name="author">
          </div>
          <div class="mb-3">
            <label for="producer" class="form-label"><b>Nhà sản xuất</b></label>
            <input type="text" class="form-control" id="producer" name="producer">
          </div>
          <div class="mb-3">
            <label for="total" class="form-label"><b>Số lượng sách</b></label>
            <input type="number" class="form-control" id="total" name="total">
          </div>
          <div class="mb-3">
            <label for="price" class="form-label"><b>Giá sách</b></label>
            <input type="number" class="form-control" id="price" name="price">
          </div>
          <div class="mb-3">
            <label for="DateAdd" class="form-label"><b>Ngày đăng sách</b></label>
            <input type="date" class="form-control" id="DateAdd" name="DateAdd">
          </div>
        <button type="submit" class="btn btn-primary">Thêm sách</button>
      </form>
