<!-- Modal -->
<div id="delete-book-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xóa sách ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn chắc chắn muốn xóa quyển sách này ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete-book" type="button" class="btn btn-danger">Xóa bỏ</button>
      </div>
    </div>
  </div>
</div>
<!-- delete hidden form -->
<form method="POST" name="delete-book-form">
<script>
    document.addEventListener('DOMContentLoaded',() => {
          var BookId;
          var deleteForm = document.forms['delete-book-form'];
          var deleteBook = document.getElementById('btn-delete-book');
        //When dialog confirm clicked
          $('#delete-book-modal').on('show.bs.modal', function (event) {
          const button = $(event.relatedTarget);
          BookId = button.data('_id');
    });
    deleteBook.onclick = function(){
        deleteForm.action = 'me/' + BookId + '/delete?_method=DELETE';
        deleteForm.submit();
    }
   
})
</script>