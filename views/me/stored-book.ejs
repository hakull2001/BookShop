    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Tên sách</th>
                <th scope="col">Đơn giá</th>
                <th scope="col">Số lượng</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        <% for(let i = 0 ; i < book.length ; i++){ %> 
    
            <tr>
                <th scope="row"><%= i+1 %></th>
                <td><a href="/books/<%= book[i].slug %>" style="text-decoration: none;"><%= book[i].name %></a></td>
                <td> <%= book[i].price %> </td>
                <td> <%= book[i].total %> </td>
                <td>
                    <a href="/me/<%=book[i]._id%>/edit" class="btn btn-outline-dark">Sửa</a>
                    <a href="" class="btn btn-outline-dark" data-toggle="modal" data-target="#delete-book-modal" data-_id="<%= book[i]._id %>">Xóa</a>
                </td>
            </tr>
        <% } %>
        <% if(!book.length) { %>
          <tr>
              <td colspan="5" class="text-center">
                  Chưa đăng tải cuốn sách nào.
                  <a href="/books/create">Đăng tải sách</a>
              </td>
          </tr>
      <% } %>
        </tbody>
    </table>
</div>
