    <div class="container">
    <div class="mt-4">
        <h3>Sách đã xóa</h3>
        <a href="/me" style="text-decoration: none;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-left-fill" viewBox="0 0 16 16">
                <path d="M3.86 8.753l5.482 4.796c.646.566 1.658.106 1.658-.753V3.204a1 1 0 0 0-1.659-.753l-5.48 4.796a1 1 0 0 0 0 1.506z"/>
              </svg>
            Quay lại
        </a>
      
    </div>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">STT</th>
                <th scope="col">Tên sách</th>
                <th scope="col">Đơn giá</th>
                <th scope="col">Số lượng</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        <% for(let i = 0 ; i < book.length ; i++){ %> 
    
            <tr>
                <th scope="row"><%= i+1 %></th>
                <td><a href="/books/<%= book[i].slug %>" style="text-decoration: none;"><%= book[i].name %></a></td>
                <td> <%= book[i].price %> </td>
                <td> <%= book[i].total %> </td> 
                <td>
                    <a href="" class="btn btn-outline-dark btn-restore" data-id="<%= book[i]._id %>">Khôi phục</a>
                    <a href="" class="btn btn-outline-dark" data-toggle="modal" data-target="#delete-book-modal" data-id="<%= book[i]._id %>">Xóa vĩnh viễn</a>
                </td>
            </tr>
        <% } %>
        <% if(!book.length) { %>
          <tr>
              <td colspan="5" class="text-center">
                  Thùng rác trống.
                  <a href="/me">Danh sách khóa học</a>
              </td>
          </tr>
      <% } %>
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
